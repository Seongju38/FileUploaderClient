{
  "compilerOptions": {
    // "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo", // 증분 빌드 (TypeScript가 이전 빌드 결과를 저장하고, 이후 빌드할 때 변경된 파일들만 다시 컴파일하는 방식) 를 활성화 시키기 위해서는 "incremental": true, 옵션 추가
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",
    // "allowImportingTsExtensions": true, // TypeScript 컴파일러에서 지원되지 않는 옵션
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
    // "noUncheckedSideEffectImports": true // TypeScript 컴파일러에서 지원되지 않는 옵션
  },
  "include": ["src"]
}
